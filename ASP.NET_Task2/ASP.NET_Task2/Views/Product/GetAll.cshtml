@model List<Product>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card" style="width: 18rem;">
                <img src="@product.ImageUrl" class="card-img-top" alt="Image">
                <div class="card-body">
                    <h5 class="card-title"><strong>Name: </strong>@product.Name</h5>
                    <p class="card-text"><strong>Description: </strong>@product.Description</p>
                    <p class="card-text"><strong>Price: </strong>@product.Price $</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <form asp-controller="Product" asp-action="Delete" method="post">
                            <input type="hidden" name="Id" value="@product.Id" />
                            <button type="submit" class="btn btn-primary">Delete</button>
                        </form>
                        <a href="@Url.Action("Update", "Product", new { id = product.Id })" class="btn btn-primary">Update</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
