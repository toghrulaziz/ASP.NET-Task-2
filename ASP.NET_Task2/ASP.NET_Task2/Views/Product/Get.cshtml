@model Product
<link href="~/css/site.css" rel="stylesheet" />



<div class="product-details">
    <div class="title-container">
        <h2 class="product-title">Product Details</h2>
    </div>
    <div class="flex-container">
        <div class="product-image">
            <img src="@Model.ImageUrl" alt="Product Image">
        </div>
        <div class="product-info">
            <p><span class="strong-text">Name:</span> @Model.Name</p>
            <p><span class="strong-text">Description:</span> @Model.Description</p>
            <p><span class="strong-text">Price:</span> <span class="price-text">@Model.Price $</span></p>
        </div>
    </div>
</div>
